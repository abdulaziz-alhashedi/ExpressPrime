# Supported database types:
# - PostgreSQL: postgres://user:password@localhost:5432/your-database
# - MySQL: mysql://user:password@localhost:3306/your-database
# - SQLite: sqlite://:memory:
# - MongoDB: mongodb://user:password@localhost:27017/your-database
# - MSSQL: mssql://user:password@localhost:1433/your-database

DATABASE_URL="postgresql://username:password@localhost:5432/database_name"
SHADOW_DATABASE_URL="postgresql://username:password@localhost:5432/shadow_database_name"

# JWT Authentication
JWT_SECRET="your-strong-secret"
ACCESS_TOKEN_SECRET="your_secure_access_token_secret"
REFRESH_TOKEN_SECRET="your_secure_refresh_token_secret"
ACCESS_TOKEN_EXPIRY="15m"
REFRESH_TOKEN_EXPIRY="7d"

# App Settings
NODE_ENV="development"
PORT=3000
CORS_ORIGIN="http://localhost:3000"

# API Keys
API_KEY="your_secure_api_key"
ADMIN_KEY="your-admin-key"